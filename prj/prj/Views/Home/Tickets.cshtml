@model TicketViewModel

@{
    ViewData["Title"] = "Buy Ticket";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-control-static">
        <label asp-for="EventId">EventId</label>
        <input asp-for="EventId" class="form-control" name="EventId" placeholder="Enter event ID">
    </div>
    <span asp-validation-for="EventId" class="text-danger"></span>
    <div class="form-control-static">
        <label asp-for="Wif">Wif</label>
        <input asp-for="Wif" class="form-control" name="Wif" placeholder="Your private key">
    </div>
    <span asp-validation-for="Wif" class="text-danger"></span>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (Model.Link != null)
{
    <a href=@Model.Link>@ViewData["Message"]</a>
}
<h3>@ViewData["DbAddResult"]</h3>
<h3>Your tickets</h3>

@{
    foreach (var eve in Model.Tickets)
    {
        <li class="list-group-item">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Ticket ID</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value=@eve.TicketId disabled>
                    </div>
                    <label class="col-sm-2 control-label">Event ID</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value=@eve.EventId disabled>
                    </div>
                </div>
            </form>
        </li>
    }
}


