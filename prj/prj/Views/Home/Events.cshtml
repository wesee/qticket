@model EventViewModel
@{
    ViewData["Title"] = "Your Events";
}

<h4>@ViewData["Title"]</h4>
<h5>@ViewData["Message"]</h5>
<form method="post">
    <div class="form-control-static">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" name="Id" placeholder="Some kind of id">
    </div>
    <span asp-validation-for="Id" class="text-danger"></span>
    <div class="form-control-static">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" name="Name" placeholder="The title of your event">
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
    <div class="form-control-static">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" name="Location" placeholder="Location of your event">
    </div>
    <span asp-validation-for="Location" class="text-danger"></span>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
    }

@{

    foreach (var eve in Model.Events)
    {
        <li class="list-group-item">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">ID</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value=@eve.Id disabled>
                    </div>
                    <label class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value=@eve.Name disabled>
                    </div>
                    <label class="col-sm-2 control-label">Location</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="text" value=@eve.Location disabled>
                    </div>
                </div>
            </form>
        </li>

    }

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}